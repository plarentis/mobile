<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/intro_image" />

    <TextView
        android:id="@+id/txt_intro"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/intro_body_margin"
        android:layout_marginRight="@dimen/intro_body_margin"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/intro_text"
        android:textSize="@dimen/welcome_text_size" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/intro_body_margin"
        android:layout_marginRight="@dimen/intro_body_margin"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <br.com.anhembi.morumbi.caca.palavra.cidades.brasil.markushi.ui.CircleButton
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/intro_button_margin"
            android:layout_weight="1"
            android:padding="@dimen/circle_button_padding"
            android:src="@drawable/ic_info"
            app:cb_color="?theme_color" />

        <br.com.anhembi.morumbi.caca.palavra.cidades.brasil.markushi.ui.CircleButton
            android:id="@+id/btn_settings"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/intro_button_margin"
            android:layout_weight="1"
            android:padding="@dimen/circle_button_padding"
            android:src="@drawable/ic_settings"
            app:cb_color="?theme_color" />

        <br.com.anhembi.morumbi.caca.palavra.cidades.brasil.markushi.ui.CircleButton
            android:id="@+id/btn_start_game"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/intro_button_margin"
            android:layout_weight="1"
            android:padding="@dimen/circle_button_padding"
            android:src="@drawable/ic_start"
            app:cb_color="?theme_color" />
    </LinearLayout>

</LinearLayout>